<div class="column has-addons has-text-centered"></div>
    <%= form_with(url: "/flights", method: "get") do |f| %>
      <div class="field is-grouped">
        <div class="select">
            <div class="control">
            <%= f.select(:depart, @airport_names, include_blank: "Depart") %>
            </div>
        </div>
        <div class="select">
            <div class="control">
            <%= f.select(:arrive, @airport_names, include_blank: "Arrival") %>
            </div>
        </div>
        <div class="select">
            <div class="control">
            <%= f.select(:passengers_count, @passen, include_blank: "Passengers") %>
            </div>
        </div>
        <div class="select">
            <div class="control">
            <%= f.select(:date, @dates, include_blank: "Date") %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.submit "Search", class:"button is-link" %>
            </div>
        </div>
      </div>
    <% end %>
</div>